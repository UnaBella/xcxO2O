.order_wrap{
  width: 100%;
  height: 100%;
}
.order_header{
  height: 60rpx;
  width: 750rpx;
  border-bottom: 1px solid #cbcbcb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #999;
}
.order_list{
  width: 100%;
  height: 100%;
}
.order_list_li{
  padding: 4% 4%;
  /* background: red; */
}
.order_list_li_number{
  padding: 0 0 2% 0;
  font-size: 26rpx;
  color: #a6a6a6;
  border-bottom: 1rpx solid #f2f2f2; 
}
.order_list_li_mes{
  overflow: hidden;
  padding: 4% 0 0 0;
}
.order_list_li_mes_img{
  width: 17%;
  height: 120rpx;
  float: left;
}
.order_list_li_mes_img image{
  width: 100%;
  height: 100%;
}
.order_list_li_mes_text{
  width: 78%;
  float: left;
  margin-left: 4%;
}
.order_list_li_mes_time{
  font-size: 20rpx;
  color: #cdcdcd;
  padding: 0 0 2% 0;
}
.order_list_li_mes_title{
  font-size: 26rpx;
}
.order_list_li_mes_operat{
  padding: 2% 0;
  font-size: 22rpx;
  text-align: right;
}
.order_list_li_mes_operat button{
  margin-left: 4%;
  color: #7b7b7b;
  font-size: 20rpx;
  width: 140rpx;
  line-height:42rpx;
}